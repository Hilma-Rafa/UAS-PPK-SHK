<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:padding="10dp">

    <!-- Kode Kualitas -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Form Entri HK-1.1"
        android:textSize="24dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editTextKodeKualitas"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Kode Kualitas"
        android:inputType="text"
        android:maxLines="1"
        android:padding="10dp"
        android:textSize="16sp" />

    <!-- Komoditas -->
    <EditText
        android:id="@+id/editTextKomoditas"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Komoditas"
        android:inputType="text"
        android:maxLines="1"
        android:padding="10dp"
        android:textSize="16sp" />

    <!-- Kualitas -->
    <EditText
        android:id="@+id/editTextKualitas"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Kualitas"
        android:inputType="text"
        android:maxLines="1"
        android:padding="10dp"
        android:textSize="16sp" />

    <!-- Harga Sebelum -->
    <EditText
        android:id="@+id/editTextHargaSebelum"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Harga Sebelum"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="10dp"
        android:textSize="16sp" />

    <!-- Harga Sekarang -->
    <EditText
        android:id="@+id/editTextHargaSekarang"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Harga Sekarang"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:padding="10dp"
        android:textSize="16sp" />

    <!-- Submit Button -->

</LinearLayout>
